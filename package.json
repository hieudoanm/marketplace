{
  "name": "marketplace",
  "version": "0.0.1",
  "description": "Marketplace",
  "main": "index.js",
  "repository": "git@github.com:hieudoanm/marketplace.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:api": "yarn workspace api build",
    "build:order": "yarn workspace order build",
    "build:payment": "yarn workspace payment build",
    "build:web": "yarn workspace web build",
    "build": "yarn build:api && yarn build:order && yarn build:payment && yarn build:web",
    "dev:api": "yarn workspace api dev",
    "dev:order": "yarn workspace order start:dev",
    "dev:payment": "yarn workspace payment start:dev",
    "dev:web": "yarn workspace web dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:api\" \"yarn dev:order\" \"yarn dev:payment\"  \"yarn dev:web\"",
    "lint:api": "yarn workspace api lint",
    "lint:order": "yarn workspace order lint",
    "lint:payment": "yarn workspace payment lint",
    "lint:web": "yarn workspace web lint",
    "lint": "yarn lint:api && yarn lint:order && yarn lint:payment && yarn lint:web",
    "test:api": "yarn workspace api test",
    "test:order": "yarn workspace order test",
    "test:payment": "yarn workspace payment test",
    "test:web": "yarn workspace web test",
    "test": "yarn test:api && yarn test:order && yarn test:payment && yarn test:web "
  },
  "dependencies": {
    "concurrently": "7.2.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "8.0.1",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3"
  }
}
